SHELL =			/bin/sh
PREFIX =		@prefix@
INSTALL_BINDIR =	$(PREFIX)/bin
INSTALL_HEAPDIR =	$(INSTALL_BINDIR)/.heap
INSTALL_WRAPPER =	@top_srcdir@/bin/install-sml-wrapper.sh
SML =			@SMLNJ_CMD@
ML_BUILD =		@ML_BUILD@

PROGRAM =		asdl-gen

SRCDIR =		@top_srcdir@/src/sml

TARGET =		$(SRCDIR)/$(PROGRAM)
HEAP =			$(TARGET).@SMLNJ_HEAP_SUFFIX@

INSTALL=@INSTALL@

build:		$(TARGET)

$(HEAP):
	(cd $(SRCDIR); \
	$(ML_BUILD) driver/sources.cm Main.main $(PROGRAM)

install:	$(HEAP)
	$(INSTALL_WRAPPER) $(TARGET) $(INSTALL_BINDIR)

clean:
	rm -f $(HEAP)
	find . \( -name CM -o -name .cm \) -exec rm -rf {} \; -prune -print

distclean:	clean
	rm -f Makefile
	rm -rf common/config.sml

devclean:	distclean
	rm -f configure
